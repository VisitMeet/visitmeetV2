<% current = is_current_user_message %>
<div id="<%= dom_id(message) %>" class="flex <%= current ? 'justify-end' : 'justify-start' %>">
  <div class="max-w-xs md:max-w-md">
    <div class="px-4 py-2 rounded-lg <%= current ? 'bg-blue-500 text-white' : 'bg-gray-200 dark:bg-gray-700 text-gray-900 dark:text-gray-100' %>">
      <%= message.body %>
    </div>
    <div class="mt-1 text-xs text-gray-500 <%= current ? 'text-right' : 'text-left' %>">
      <span><%= message.created_at.strftime("%H:%M") %></span>
      <% if current && message.read_at.present? %>
        <span class="ml-2">Read</span>
      <% end %>
      <% if current %>
        <span class="inline-flex space-x-2 ml-2 align-middle">
          <%= link_to edit_conversation_message_path(message.conversation, message), class: "text-blue-500 hover:text-blue-700", data: { turbo_frame: "_top" } do %>
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L8.5 21H3v-5.5L15.732 3.732z"/></svg>
            <span class="sr-only">Edit</span>
          <% end %>
          <%= link_to conversation_message_path(message.conversation, message), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: "text-red-500 hover:text-red-700" do %>
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6M1 7h22M9 3h6a1 1 0 011 1v2H8V4a1 1 0 011-1z"/></svg>
            <span class="sr-only">Delete</span>
          <% end %>
        </span>
      <% end %>
    </div>
  </div>
</div>
