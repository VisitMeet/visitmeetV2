<%= form_with(model: [conversation, message], class: "flex items-center space-x-4") do |form| %>
  <%= form.text_area :body, class: "flex-grow border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500", rows: 1, placeholder: "Type your message..." %>
  <%= form.submit "Send", class: "bg-blue-600 text-white px-4 py-2 rounded-md hover:bg-blue-700 font-medium" %>
<% end %>