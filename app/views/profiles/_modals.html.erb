<!-- Location Modal -->
<div id="location-modal" class="hidden fixed inset-0 bg-black bg-opacity-50 flex justify-center items-center">
  <div class="bg-white p-6 rounded shadow-lg">
    <h3 class="text-xl mb-4">Add Location Tag</h3>
    <form action="<%= add_location_tag_path %>" method="post">
      <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
      <input type="text" name="name" class="border border-gray-300 px-3 py-2 mb-4 w-full" placeholder="Enter location tag">
      <button type="submit" class="bg-blue-500 text-white px-4 py-2 rounded">Add</button>
    </form>
    <button class="mt-4 text-gray-500" onclick="closeLocationModal()">Cancel</button>
  </div>
</div>

