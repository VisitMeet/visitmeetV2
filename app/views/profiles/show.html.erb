<div class="max-w-4xl mx-auto bg-white shadow-md rounded-lg p-6 mt-8">
  <h1 class="text-3xl font-bold text-gray-800 mb-4">
    <%= @user.username %>'s Profile
  </h1>
  
  <div class="mb-4">
    <p class="text-lg text-gray-600">
      <span class="font-semibold text-gray-700">Email:</span> <%= @user.email %>
    </p>
  </div>
  
  <div class="mb-4">
    <p class="text-lg text-gray-600">
      <span class="font-semibold text-gray-700">Joined on:</span> <%= @user.created_at.strftime("%B %d, %Y") %>
    </p>
  </div>

  <!-- Add more details about the user here -->
  <div class="mt-6">
    <a href="<%= edit_user_registration_path %>" class="bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600 transition duration-300">
      Edit Profile
    </a>
  </div>
</div>


<div class="bg-white p-6 rounded-lg shadow-md relative">
  <div class="mb-4">
    <h2 class="text-xl font-semibold text-gray-700">I live in:</h2>
    <div class="flex flex-wrap space-x-2">
      <% if @user.location_tags.any? %>
        <% @user.location_tags.each do |tag| %>
          <span class="inline-block bg-blue-100 text-blue-800 text-sm font-semibold mr-2 px-2.5 py-0.5 rounded">#<%= tag.name %></span>
        <% end %>
      <% end %>
    </div>
    <% if @user.location_tags.empty? %>
      <button id="add-location" class="absolute top-0 right-0 bg-blue-500 text-white font-bold py-2 px-4 rounded hover:bg-blue-700">+ Add</button>
    <% end %>
  </div>

  <div class="mb-4">
    <h2 class="text-xl font-semibold text-gray-700">I do:</h2>
    <div class="flex flex-wrap space-x-2">
      <% if @user.profession_tags.any? %>
        <% @user.profession_tags.each do |tag| %>
          <span class="inline-block bg-green-100 text-green-800 text-sm font-semibold mr-2 px-2.5 py-0.5 rounded">#<%= tag.name %></span>
        <% end %>
      <% end %>
    </div>
    <% if @user.profession_tags.empty? %>
      <button id="add-profession" class="absolute top-0 right-0 bg-green-500 text-white font-bold py-2 px-4 rounded hover:bg-green-700">+ Add</button>
    <% end %>
  </div>
</div>