<div class="mb-6">
  <h2 class="text-lg font-bold">I live in:</h2>
  <% if @user.location_tags.any? %>
    <div class="flex gap-2">
      <% @user.location_tags.each do |tag| %>
        <span class="bg-gray-200 text-gray-700 px-2 py-1 rounded">#<%= tag.tag.name %></span>
      <% end %>
    </div>
  <% else %>
    <button class="bg-blue-500 text-white px-3 py-1 rounded" onclick="openLocationModal()">+ Add</button>
  <% end %>
</div>

<div class="mb-6">
  <h2 class="text-lg font-bold">I do:</h2>
  <% if @user.profession_tags.any? %>
    <div class="flex gap-2">
      <% @user.profession_tags.each do |tag| %>
        <span class="bg-green-200 text-green-700 px-2 py-1 rounded">#<%= tag.tag.name %></span>
      <% end %>
    </div>
  <% else %>
    <button class="bg-green-500 text-white px-3 py-1 rounded" onclick="openProfessionModal()">+ Add</button>
  <% end %>
</div>