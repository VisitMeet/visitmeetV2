<main class="relative min-h-screen bg-cover bg-center" style="background-image: url('/images/stonehenge_meteor_shower.png');">
  <div class="absolute inset-0 bg-black/40 dark:bg-black/60"></div>
  <div class="relative z-10 flex items-center justify-center min-h-screen px-4">
    <%= form_with url: search_results_path, method: :get, local: true, class: "w-full max-w-2xl" do %>
      <div class="flex w-full items-center bg-white/90 dark:bg-gray-800/90 backdrop-blur-xl rounded-full shadow-2xl overflow-hidden ring-1 ring-white/20 focus-within:ring-2 focus-within:ring-blue-500 transition">
        <input type="text" name="tags" placeholder="Search destinations or hosts" class="flex-grow bg-transparent px-6 py-4 text-gray-900 placeholder-gray-500 focus:outline-none dark:text-gray-100" />
        <button type="submit" class="px-6 py-4 bg-blue-600 text-white font-semibold hover:bg-blue-700 focus:outline-none">Search</button>
      </div>
    <% end %>
  </div>
</main>
