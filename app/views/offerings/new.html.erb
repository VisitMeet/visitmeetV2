<div class="container mx-auto p-4">
  <div class="max-w-2xl mx-auto">
    <div class="mb-6">
      <h1 class="text-3xl font-bold mb-2">Create New Offering</h1>
      <p class="text-gray-600 dark:text-gray-300">Share your local expertise with travelers</p>
    </div>

    <%= form_with(model: @offering, local: true, class: "space-y-6") do |form| %>
      <% if @offering.errors.any? %>
        <div class="bg-red-50 border border-red-200 rounded-md p-4">
          <h3 class="text-red-800 font-medium mb-2">Please fix the following errors:</h3>
          <ul class="text-red-600 text-sm list-disc list-inside">
            <% @offering.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="bg-white dark:bg-gray-800 shadow-md rounded-lg p-6">
        <div class="space-y-4">
          <div>
            <label for="offering_title" class="block text-sm font-medium text-gray-700 dark:text-gray-200 mb-2">Title</label>
            <%= form.text_field :title, 
                placeholder: "e.g., Hidden Photography Spots Tour", 
                class: "w-full p-3 border border-gray-300 dark:border-gray-600 rounded-md focus:ring-2 focus:ring-blue-500 focus:border-transparent" %>
          </div>

          <div>
            <label for="offering_description" class="block text-sm font-medium text-gray-700 dark:text-gray-200 mb-2">Description</label>
            <%= form.text_area :description, 
                placeholder: "Describe what you offer, what makes it special, and what travelers can expect...", 
                rows: 5,
                class: "w-full p-3 border border-gray-300 dark:border-gray-600 rounded-md focus:ring-2 focus:ring-blue-500 focus:border-transparent" %>
          </div>

          <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <div>
              <label for="offering_price" class="block text-sm font-medium text-gray-700 dark:text-gray-200 mb-2">Price (USD)</label>
              <%= form.number_field :price, 
                  placeholder: "0", 
                  step: 0.01,
                  min: 0,
                  class: "w-full p-3 border border-gray-300 dark:border-gray-600 rounded-md focus:ring-2 focus:ring-blue-500 focus:border-transparent" %>
            </div>

            <div>
              <label for="offering_location" class="block text-sm font-medium text-gray-700 dark:text-gray-200 mb-2">Location</label>
              <%= form.text_field :location, 
                  placeholder: "e.g., tokyo, paris, bali", 
                  class: "w-full p-3 border border-gray-300 dark:border-gray-600 rounded-md focus:ring-2 focus:ring-blue-500 focus:border-transparent" %>
            </div>
          </div>

          <div class="flex space-x-4 pt-4">
            <%= form.submit "Create Offering", 
                class: "bg-blue-500 hover:bg-blue-600 text-white px-6 py-3 rounded-md font-medium transition-colors" %>
            <%= link_to "Cancel", offerings_path, 
                class: "bg-gray-300 hover:bg-gray-400 text-gray-700 dark:text-gray-200 px-6 py-3 rounded-md font-medium transition-colors" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>