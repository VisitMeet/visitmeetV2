<div class="container mx-auto p-4">
  <div class="max-w-lg mx-auto bg-white shadow-md rounded-lg p-6">
    <h1 class="text-2xl font-bold mb-4 text-center">Results</h1>
    <input type="text" id="your-input-field-id" class="border p-2 rounded-md w-full mb-4" placeholder="Start typing...">
    <ul class="list-disc list-inside">
      <% @users.each do |user| %>
        <li class="text-lg">
          <%= link_to user.username, profile_path(user), class: "text-blue-500 hover:underline" %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
