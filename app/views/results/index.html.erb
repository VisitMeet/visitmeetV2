<div class="container mx-auto p-4">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <h1 class="text-3xl font-bold mb-4 text-center">Search Results</h1>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      <% @profiles.each do |profile| %>
        <div class="bg-white shadow-md rounded-lg p-6">
          <h2 class="text-2xl font-semibold mb-2"><%= profile.username %></h2>
          <p class="text-gray-700 mb-4">Email: <%= profile.email %></p>
          <h3 class="text-xl font-semibold mb-2">Tags:</h3>
          <ul class="list-disc list-inside">
            <% profile.tags.each do |tag| %>
              <li>#<%= tag.name %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
    </div>
  </div>
</div>
