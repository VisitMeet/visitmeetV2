<div class="edit-account-wrapper container mx-auto py-8 px-6">
  <h2 class="text-2xl font-bold text-center mb-6">Edit <%= resource_name.to_s.humanize %></h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="mb-4">
      <%= f.label :full_name, class: "block text-gray-700 dark:text-gray-200 font-bold mb-2" %>
      <%= f.text_field :full_name, autofocus: true, placeholder: "Enter your full name", class: "block w-full px-3 py-2 bg-white dark:bg-gray-800 border border-gray-300 dark:border-gray-600 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" %>
    </div>

    <div class="mb-4">
      <%= f.label :email, class: "block text-gray-700 dark:text-gray-200 font-bold mb-2" %>
      <%= f.email_field :email, autocomplete: "email", class: "block w-full px-3 py-2 bg-white dark:bg-gray-800 border border-gray-300 dark:border-gray-600 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" %>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <p class="text-center text-gray-500 dark:text-gray-400">Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
    <% end %>

    <div class="mb-4">
      <%= f.label :username, class: "block text-gray-700 dark:text-gray-200 font-bold mb-2" %>
      <% if resource.username.blank? %>
        <%= f.text_field :username, placeholder: "Enter your username", class: "block w-full px-3 py-2 bg-white dark:bg-gray-800 border border-gray-300 dark:border-gray-600 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" %>
      <% else %>
        <div class="flex items-center">
          <%= f.text_field :username, value: resource.username, disabled: true, class: "block w-full px-3 py-2 bg-white dark:bg-gray-800 border border-gray-300 dark:border-gray-600 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" %>
          <p class="ml-2 text-gray-500 dark:text-gray-400">You have already set a username.</p>
        </div>
      <% end %>
    </div>

    <div class="mb-4">
      <%= f.label :password, class: "block text-gray-700 dark:text-gray-200 font-bold mb-2" %>
      <%= f.password_field :password, autocomplete: "new-password", class: "block w-full px-3 py-2 bg-white dark:bg-gray-800 border border-gray-300 dark:border-gray-600 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" %>
      <% if @minimum_password_length %>
        <p class="text-gray-500 dark:text-gray-400"><em><%= @minimum_password_length %> characters minimum</em></p>
      <% end %>
    </div>

    <div class="mb-4">
      <%= f.label :password_confirmation, class: "block text-gray-700 dark:text-gray-200 font-bold mb-2" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "block w-full px-3 py-2 bg-white dark:bg-gray-800 border border-gray-300 dark:border-gray-600 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" %>
    </div>

    <div class="mb-4">
      <%= f.label :current_password, class: "block text-gray-700 dark:text-gray-200 font-bold mb-2" %>
      <p class="text-gray-500 dark:text-gray-400"><em>(we need your current password to confirm your changes)</em></p>
      <%= f.password_field :current_password, autocomplete: "current-password", class: "block w-full px-3 py-2 bg-white dark:bg-gray-800 border border-gray-300 dark:border-gray-600 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" %>
    </div>

    <div class="text-center">
      <%= f.submit "Update", class: "w-full py-2 px-4 bg-blue-500 hover:bg-blue-600 text-white font-bold rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" %>
    </div>
  <% end %>

  <h3 class="text-center text-gray-600 dark:text-gray-300 mt-4">Cancel my account</h3>

  <div class="text-center mt-2">
    <p class="text-gray-500 dark:text-gray-400">Unhappy?</p>
    <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete, class: "bg-red-500 text-white px-4 py-2 rounded-md hover:bg-red-600" %>
  </div>

  <div class="text-center mt-4">
    <%= link_to "Back", :back, class: "text-blue-500 hover:text-blue-700 underline" %>
  </div>
</div>