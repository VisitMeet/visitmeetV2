<% content_for :recaptcha_script do %>
  <script src="https://www.google.com/recaptcha/api.js?render=<%= ENV["RECAPTCHA_SITE_KEY"] %>"></script>
<% end %>

<div class="min-h-screen bg-gradient-to-br from-blue-400 via-cyan-500 to-teal-500 flex items-center justify-center relative overflow-hidden">
  <!-- Background geometric patterns -->
  <div class="absolute inset-0">
    <!-- Mountain/wave shapes -->
    <svg class="absolute bottom-0 left-0 w-full h-64" viewBox="0 0 1200 200" fill="none">
      <path d="M0 100C200 50 400 150 600 100C800 50 1000 150 1200 100V200H0V100Z" fill="rgba(255,255,255,0.1)"/>
      <path d="M0 120C300 80 500 160 800 120C900 100 1100 180 1200 120V200H0V120Z" fill="rgba(255,255,255,0.05)"/>
    </svg>
    <!-- Floating elements -->
    <div class="absolute top-20 left-20 w-16 h-16 bg-white bg-opacity-20 rounded-full"></div>
    <div class="absolute top-40 right-32 w-8 h-8 bg-white bg-opacity-30 rounded-full"></div>
    <div class="absolute bottom-32 left-1/4 w-12 h-12 bg-white bg-opacity-15 rounded-full"></div>
    <div class="absolute top-1/3 right-1/4 w-6 h-6 bg-white bg-opacity-25 rounded-full"></div>
  </div>

  <!-- Sign Up Card -->
  <div class="relative z-10 bg-white rounded-3xl shadow-2xl w-full max-w-md mx-4 p-6
              max-h-[90vh] overflow-y-auto flex-shrink-0">
    <!-- Header -->
    <div class="text-center mb-6">
      <div class="mb-4">
        <!-- Logo/Icon -->
        <div class="w-16 h-16 bg-gradient-to-r from-blue-500 to-cyan-500 rounded-2xl mx-auto flex items-center justify-center mb-3">
          <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                  d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                  d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
          </svg>
        </div>
        <h1 class="text-2xl font-bold text-gray-800 mb-1">Sign Up</h1>
        <p class="text-gray-500 text-sm">Create your account to discover hidden places</p>
      </div>
    </div>

    <!-- Form -->
    <%= form_with model: resource,
                  as: resource_name,
                  url: registration_path(resource_name),
                  local: true,
                  class: "space-y-4" do |f| %>

      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="space-y-3">
        <%= f.text_field :full_name,
                         placeholder: "Full name",
                         required: true,
                         autofocus: true,
                         autocomplete: "name",
                         class: "w-full px-4 py-3 bg-gray-50 border-0 rounded-xl focus:outline-none focus:ring-2 focus:ring-blue-500 transition text-gray-800 placeholder-gray-400" %>

        <%= f.text_field :username,
                         placeholder: "Username",
                         required: true,
                         autocomplete: "username",
                         class: "w-full px-4 py-3 bg-gray-50 border-0 rounded-xl focus:outline-none focus:ring-2 focus:ring-blue-500 transition text-gray-800 placeholder-gray-400" %>

        <%= f.email_field :email,
                          placeholder: "Email",
                          required: true,
                          autocomplete: "email",
                          class: "w-full px-4 py-3 bg-gray-50 border-0 rounded-xl focus:outline-none focus:ring-2 focus:ring-blue-500 transition text-gray-800 placeholder-gray-400" %>

        <%= f.password_field :password,
                             placeholder: "Password",
                             required: true,
                             autocomplete: "new-password",
                             class: "w-full px-4 py-3 bg-gray-50 border-0 rounded-xl focus:outline-none focus:ring-2 focus:ring-blue-500 transition text-gray-800 placeholder-gray-400" %>

        <%= f.password_field :password_confirmation,
                             placeholder: "Confirm password",
                             required: true,
                             autocomplete: "new-password",
                             class: "w-full px-4 py-3 bg-gray-50 border-0 rounded-xl focus:outline-none focus:ring-2 focus:ring-blue-500 transition text-gray-800 placeholder-gray-400" %>
      </div>

      <div class="pt-4">
        <%= f.submit "Sign Up",
                     class: "w-full bg-gradient-to-r from-blue-500 to-cyan-500 text-white font-semibold py-3 rounded-xl focus:outline-none focus:ring-2 focus:ring-blue-500 transform transition hover:scale-[1.02] shadow-lg" %>
        <%= recaptcha_v3(action: 'signup') %>
      </div>
<div class="pt-6">
        <div class="relative">
          <div class="absolute inset-0 flex items-center">
            <div class="w-full border-t border-gray-200"></div>
          </div>
          <div class="relative flex justify-center text-sm">
            <span class="px-2 bg-white text-gray-400">or</span>
          </div>
        </div>


      <!-- Social Login -->
      <div class="pt-6 space-y-3">
        <button type="button"
                class="w-full flex justify-center items-center py-3 px-4 border border-gray-200 rounded-xl hover:bg-gray-50 transition">
          <svg class="w-5 h-5 mr-3" viewBox="0 0 24 24">
            <path fill="#4285F4" d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z"/>
            <path fill="#34A853" d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z"/>
            <path fill="#FBBC05" d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z"/>
            <path fill="#EA4335" d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z"/>
          </svg>
          <span class="text-gray-600 font-medium">Continue with Google</span>
        </button>
        <button type="button"
                class="w-full flex justify-center items-center py-3 px-4 border border-gray-200 rounded-xl hover:bg-gray-50 transition">
          <svg class="w-5 h-5 mr-3" fill="#1877F2" viewBox="0 0 24 24">
            <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
          </svg>
          <span class="text-gray-600 font-medium">Continue with Facebook</span>
        </button>
      </div>

      <div class="text-center pt-6">
        <span class="text-sm text-gray-500">Already have an account? </span>
        <%= link_to "Sign In", new_session_path(resource_name),
                    class: "font-semibold text-blue-600 hover:text-blue-500 transition duration-200" %>
      </div>
    <% end %>
  </div>
</div>

<script>
  grecaptcha.ready(function() {
    grecaptcha.execute('<%= Rails.application.credentials.dig(:recaptcha, :site_key) %>', {action: 'signup'}).then(function(token) {
      let el = document.createElement("input");
      el.setAttribute("type", "hidden");
      el.setAttribute("name", "recaptcha_token");
      el.setAttribute("value", token);
      document.querySelector("form").appendChild(el);
    });
  });
</script>