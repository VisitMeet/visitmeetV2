<div class="container mx-auto py-8 px-6">
  <div class="flex flex-col md:flex-row">
    <div class="bg-black text-white md:w-1/3 p-8">
      <h2 class="text-2xl font-bold text-center mb-6">Log In</h2>
    </div>

    <div class="md:w-2/3 p-8">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="mb-4">
          <%= f.label :login, "Username or Email", class: "block text-gray-700 font-bold mb-2" %>
          <%= f.text_field :login, autofocus: true, autocomplete: "username", class: "block w-full px-3 py-2 bg-white border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" %>
        </div>

        <div class="mb-4">
          <%= f.label :password, class: "block text-gray-700 font-bold mb-2" %>
          <%= f.password_field :password, autocomplete: "current-password", class: "block w-full px-3 py-2 bg-white border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="mb-4">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me, class: "ml-2 text-gray-700" %>
          </div>
        <% end %>

        <div class="text-center">
          <%= f.submit "Log in", id: "log-in-btn", class: "w-full py-2 px-4 bg-blue-500 hover:bg-blue-600 text-white font-bold rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>