<div class="container mx-auto py-8 px-6">
  <h2 class="text-2xl font-bold text-center mb-6">Change your password</h2>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <%= f.hidden_field :reset_password_token %>

    <div class="mb-4">
      <%= f.label :password, "New password", class: "block text-gray-700 font-bold mb-2" %>
      <% if @minimum_password_length %>
        <p class="text-gray-500"><em>(<%= @minimum_password_length %> characters minimum)</em></p>
      <% end %>
      <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "block w-full px-3 py-2 bg-white border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" %>
    </div>

    <div class="mb-4">
      <%= f.label :password_confirmation, "Confirm new password", class: "block text-gray-700 font-bold mb-2" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "block w-full px-3 py-2 bg-white border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" %>
    </div>

    <div class="text-center">
      <%= f.submit "Change my password", class: "w-full py-2 px-4 bg-blue-500 hover:bg-blue-600 text-white font-bold rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" %>
    </div>
  <% end %>

  <div class="mt-4 text-center text-gray-500">
    <%= render "devise/shared/links" %>
  </div>
</div>